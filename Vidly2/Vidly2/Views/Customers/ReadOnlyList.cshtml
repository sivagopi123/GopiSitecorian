
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button class="btn btn-primary" onclick="location.href='@Url.Action("CustomerDetails","Customers")'">Add New User</button>
<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Customer
            </th>
            <th>
                Discount Rate
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {

            var dataTableCustomers = $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "customerName",
                        render: function (data, type, customer) {
                            return "<a href='/Customers/CustomerDetails/" + customer.customerId + "'>" + customer.customerName + "</a>";
                        }
                    },
                    {
                        data: "membershipType.membershipTypeName"
                    }
                ]
            });
        });
    </script>
}
